<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <xyz.wendyltanpcy.myapplication.helper.ColorLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ib_refresh"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_refresh_white_24dp"/>

            <android.support.v7.widget.SearchView
                android:id="@+id/et_url"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/search_bar"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/ib_go"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:rotation="180"
                android:scaleType="centerInside"
                android:src="@drawable/title_back"/>




            <ImageView
                android:id="@+id/ib_star"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_star_white_24dp"/>




        </xyz.wendyltanpcy.myapplication.helper.ColorLinearLayout>

        <ProgressBar
            android:id="@+id/pb_load"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wb_test_web"
            android:layout_weight="1">

        </WebView>

        <xyz.wendyltanpcy.myapplication.helper.ColorLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="0dp"
                android:src="@drawable/ic_chevron_left_white_24dp"/>

            <ImageView
                android:id="@+id/ib_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home_white_24dp"/>

            <ImageView
                android:id="@+id/ib_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_chevron_right_white_24dp"/>


        </xyz.wendyltanpcy.myapplication.helper.ColorLinearLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_gravity="end"
        android:id="@+id/nav_broswer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <xyz.wendyltanpcy.myapplication.helper.ColorLinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/starOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_star_white_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="收藏夹"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/openText"
                        android:text="关"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textColor="#ffffff"/>
                </LinearLayout>




            </xyz.wendyltanpcy.myapplication.helper.ColorLinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/page_list_fragment"
                    android:layout_gravity="bottom"
                    android:name="xyz.wendyltanpcy.myapplication.TodoBrowser.PageListFragment"/>
            </LinearLayout>
        </LinearLayout>



    </android.support.design.widget.NavigationView>





</android.support.v4.widget.DrawerLayout>